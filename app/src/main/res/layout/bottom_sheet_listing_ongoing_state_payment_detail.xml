<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/black_20_opacity"
                android:textSize="16dp"
                android:text="@string/amount_capital" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:background="@drawable/white_fill_black_stroke_shape"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="300 KR" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/black_20_opacity"
                android:textSize="16dp"
                android:text="@string/payment_method_capital" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/white_round_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_regular"
                        android:textSize="16dp"
                        android:text="@string/amount" />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_regular"
                        android:textSize="16dp"
                        android:gravity="end"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_regular"
                        android:textSize="16dp"
                        android:text="@string/livo_fee" />

                    <TextView
                        android:id="@+id/tvLivoFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_regular"
                        android:textSize="16dp"
                        android:text="textview" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"
                        android:textSize="16dp"
                        android:text="@string/total_amount" />

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"
                        android:textSize="16dp"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

            <com.loopeer.shadow.ShadowView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                app:cornerRadius="5dp"
                app:shadowColor="@color/livo_light_green"
                app:shadowDx="4"
                app:shadowDy="4"
                android:layout_marginBottom="40dp"
                app:shadowMargin="3dp"
                app:shadowRadius="20dp">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnCompleteTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_round_shap"
                    android:backgroundTint="@color/livo_green"
                    android:fontFamily="@font/barlow_bold"
                    android:padding="12dp"
                    android:text="@string/complete_transaction"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />


            </com.loopeer.shadow.ShadowView>
        </LinearLayout>
    </RelativeLayout>
</layout>