<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.livo.nuo.lib.roundImageView.RoundedImageView
                android:id="@+id/imgshimmerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_corner_radius="13dp"
                android:src="@drawable/grey_round_shape"/>

        </com.facebook.shimmer.ShimmerFrameLayout>


        <com.livo.nuo.lib.roundImageView.RoundedImageView
            android:id="@+id/imgProductImagex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="13dp"
            android:src="@drawable/grey_round_shape"
            android:scaleType="centerCrop"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPricex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="13dp"
            android:text="00 KR"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/barlow_bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/red_right_round_shape"/>

    </RelativeLayout>

</RelativeLayout>