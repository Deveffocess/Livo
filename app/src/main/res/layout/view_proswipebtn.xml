<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_round_6"
    android:gravity="center">


        <RelativeLayout
            android:id="@+id/relativeLayout_swipeBtn_contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout_swipeBtn_hintContainer"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="@android:color/white">

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/tv_btnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publish Listing"
                app:reflectionColor="@color/white"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_semibold"
                android:textColor="@color/livo_black_30_opacity"
                android:textSize="14dp"
                android:letterSpacing="0.02"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout_swipeBtn_hintContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_round_shape"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_arrow1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_right"
                android:padding="@dimen/_10sdp"/>

<!--            <ImageView-->
<!--                android:id="@+id/iv_arrow2"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                app:srcCompat="@drawable/ic_swipe_right_caret" />-->

        </LinearLayout>

    </RelativeLayout>



